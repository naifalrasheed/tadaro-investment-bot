# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Flask Secret Key (REQUIRED - Generate a strong random key)
SECRET_KEY=your_super_secret_key_here_generate_random_32_chars

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/investment_bot_prod
# OR for SQLite in production (not recommended)
# DATABASE_URL=sqlite:///production_app.db

# ============================================
# API KEYS (REQUIRED)
# ============================================

# Alpha Vantage API (Stock data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Claude API (Anthropic - for chat functionality)
CLAUDE_API_KEY=your_claude_api_key

# TwelveData API (Saudi market data)
TWELVEDATA_API_KEY=your_twelvedata_api_key

# News API (Optional but recommended)
NEWS_API_KEY=your_news_api_key

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# ============================================
# REDIS CONFIGURATION (Optional - for rate limiting and caching)
# ============================================

REDIS_URL=redis://localhost:6379/0

# ============================================
# LOGGING CONFIGURATION
# ============================================

LOG_LEVEL=INFO
LOG_FILE=logs/production.log

# ============================================
# CORS CONFIGURATION
# ============================================

# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# MONITORING CONFIGURATION
# ============================================

# Application monitoring
SENTRY_DSN=https://your-sentry-dsn-here
MONITORING_ENABLED=true

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key